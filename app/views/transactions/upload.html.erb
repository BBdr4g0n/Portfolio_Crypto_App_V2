<h1>Upload Transactions CSV</h1>

<%= form_with url: import_path, method: :post, local: true, multipart: true do |form| %>
    <div>
        <%= form.label :file, "Select CSV File" %>
        <%= form.file_field :file %>
    </div>
    <div>
        <%= form.label :wallet_id %>
        <%= form.collection_select :wallet_id, Wallet.where(user_id: current_user).order(:name), :id, :name %>
    </div>
    <div>
        <%= form.submit "Upload" %>
    </div>
<% end %>